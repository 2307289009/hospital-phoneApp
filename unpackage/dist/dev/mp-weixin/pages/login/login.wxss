page {
  height: 100%;
}
.login-wrapper {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
}
.login-card {
  width: 88%;
  max-width: 400px;
  background-color: #ffffff;
  border-radius: 15px;
  padding: 0 30px 30px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  position: relative;
}
.avatar-container {
  position: absolute;
  top: -40px;
  left: 50%;
  transform: translateX(-50%);
  border: 4px solid #fff;
  border-radius: 50%;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}
.welcome-text {
  text-align: center;
  padding-top: 60px;
  margin-bottom: 25px;
}
.welcome-text .title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}
.welcome-text .subtitle {
  font-size: 14px;
  color: #999;
  margin-top: 8px;
}
 .uv-form-item__body {
  background-color: #f7f8fa;
  padding: 4px 12px;
  border-radius: 8px;
}
 .uv-form-item__body .uv-input__content__prefix-icon {
  margin-right: 8px;
}
.login-button-container {
  margin-top: 40px;
}
.login-button-container .uv-button {
  height: 45px;
  border-radius: 8px;
  background: linear-gradient(to right, #667eea, #764ba2) !important;
}
.register-link-container {
  margin-top: 20px;
  text-align: center;
  font-size: 14px;
  color: #999;
}
.register-link-container .link {
  color: #764ba2;
  font-weight: bold;
  margin-left: 5px;
}